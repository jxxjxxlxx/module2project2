<div id="form">
  <h2>Login</h2>
 
  <form action="/signin" method="POST">
 
    <label> Email
      <input type="email" name="email" placeholder="***@ironhack.com" />
    </label>
 
    <label>Password
      <input type="password" name="password" placeholder="********" />
    </label>
    
    <button type="submit">Sign-in</button>
 
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>