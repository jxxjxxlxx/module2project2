<div class="container">
  <ul>
    {{#each dogs}}
    <div class="dogList">
    <img class="dogPic" src="{{this.image}}" alt="{{this.name}}">
        <div class="textpart">
        <li>{{this.name}}
        <p>{{this.breed}}</p>
        <p>{{this.description}}</p>
        <p>{{this.adopted}}</p>
        </li>
        </div>
    </div>
    <div class="buttonUser">
        <button><a href = "/adopt/{{this.id}}/adoption-form">ADOPT ME!</a></button>
        <button><a href = "/users/{{this.id}}/favorites/add">❤️</a></button>
    </div>
    <div class="buttonAdmin">
    <button><a href = "/adopt/{{this.id}}/update">Update</a></button>
    <button><a href = "/adopt/{{this.id}}/delete">Delete</a></button>
    </div>
    <form method="POST"></form>
{{/each}}
  </ul>
</div>